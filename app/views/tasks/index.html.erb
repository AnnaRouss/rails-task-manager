<h1>My Tasks</h1>
<hr>
<div class="form-check form-check-inline">
    <ul>
      <% @tasks.each do |task| %>
      <li><input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
      <label class="form-check-label" for="inlineCheckbox1"><%= link_to task.title, task_path(task.id) %> </label>
        <i class="fa-solid fa-trash"></i><%= link_to 'delete', task_path(task.id), data: {turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this task?'} %>
      </li>
    <% end %>
    </ul>
</div><br>
<hr>
<i class="fa-solid fa-plus"></i><%= link_to "New task", new_task_path %><br>
